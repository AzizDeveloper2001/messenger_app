<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.menuFragments.CreateContactFragment">

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_margin="15dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_group_128"
        android:id="@+id/image"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_margin="15dp"
        android:hint="Ism"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:id="@+id/firstname"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/firstname"
        android:layout_margin="15dp"
        android:hint="Familiya"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:id="@+id/lastname"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/phone"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="+998"
        android:background="@drawable/textlines"
        android:id="@+id/code"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lastname"
       app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/code"
        android:layout_margin="15dp"
        android:hint="996434256"
        android:maxWidth="9dp"
        android:inputType="phone"
        android:background="@drawable/textlines"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:id="@+id/phone"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/phone"
        android:text="Kontackt qo'shish"
        android:textAllCaps="false"
        android:padding="10dp"
        android:backgroundTint="#5B61B9"
        android:id="@+id/save"/>

</androidx.constraintlayout.widget.ConstraintLayout>
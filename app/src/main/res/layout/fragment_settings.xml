    <TextView
        android:id="@+id/passcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:layout_margin="20dp"
        android:text="Parol o'rnatish"
        android:gravity="center_vertical"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:drawablePadding="5dp"
        app:layout_constraintTop_toBottomOf="@id/lay"
        />
    <TextView
        android:id="@+id/dis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@drawable/unlock"
        android:layout_margin="20dp"
        android:text="Parolni bekor qilish"
        android:gravity="center_vertical"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:drawablePadding="5dp"
        app:layout_constraintTop_toBottomOf="@id/passcode"
        />
    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@drawable/ic_baseline_logout_24"
        android:layout_margin="20dp"
        android:text="Accountni o'chirish"
        android:gravity="center_vertical"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:drawablePadding="5dp"
        app:layout_constraintTop_toBottomOf="@id/dis"
        tools:layout_editor_absoluteX="20dp" />





<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.GoogleSignInFragment">

    <ImageView
        android:id="@+id/google"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Telefon raqaminggizni kiriting"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/google" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="+998"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:background="@drawable/textlines"
        android:id="@+id/code"/>
    <EditText
        android:id="@+id/phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/code"
        app:layout_constraintTop_toTopOf="@id/code"
        app:layout_constraintBottom_toBottomOf="@id/code"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"

        android:hint="996434256"
        android:inputType="phone"
        android:maxLength="9"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
        android:background="@drawable/textlines"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         android:id="@+id/btn"
        android:backgroundTint="#5B61B9"
        android:layout_margin="30dp"
        android:text="Sign in"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>
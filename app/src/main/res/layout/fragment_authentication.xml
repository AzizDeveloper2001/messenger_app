<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AuthenticationFragment">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="match_parent"
        android:layout_height="0dp"
       app:layout_constraintHeight_percent="0.4"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_mobile_login_bro__1__1"
        android:id="@+id/image"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ro’yhatdan o’tish"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/register"/>
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/register"
        android:layout_margin="15dp"
        android:text="Telefon raqaminggizni kiriting"
        android:textColor="@color/black"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/phone"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="+998"
        android:textSize="20sp"

        android:textColor="@color/black"
        android:background="@drawable/textlines"
        android:id="@+id/code"/>
    <EditText
        android:id="@+id/phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/code"
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:hint="996434256"

        android:inputType="phone"
        android:maxLength="9"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:background="@drawable/textlines"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/phone"
        android:text="Keyingi"
        android:textAllCaps="false"
        android:backgroundTint="#5B61B9"
        android:padding="5dp"
        android:id="@+id/next"/>
    <com.google.android.gms.common.SignInButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/googlesignIn"/>









</androidx.constraintlayout.widget.ConstraintLayout>
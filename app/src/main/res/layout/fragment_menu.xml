<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.menuFragments.MenuFragment">

<!--    <ImageView-->
<!--        android:layout_width="30dp"-->
<!--        android:layout_height="30dp"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintLeft_toLeftOf="parent"-->
<!--        android:src="@drawable/ic_baseline_arrow_back_24"-->
<!--        android:layout_margin="7dp"-->
<!--        android:id="@+id/back"/>-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_man__1_"
        app:civ_border_color="@color/purple_500"
        app:civ_border_width="2dp"
        android:layout_margin="20dp"
        android:id="@+id/profileimage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profileimage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:textColor="#918EFF"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:id="@+id/profilename"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profilename"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/number"

        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/creategroup"
        app:layout_constraintTop_toBottomOf="@id/number"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableEnd="@drawable/arrownext"
        android:drawableStart="@drawable/create_group"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        android:text="Guruh ochish"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:drawablePadding="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contacts"
        app:layout_constraintTop_toBottomOf="@id/creategroup"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableEnd="@drawable/arrownext"
        android:drawableStart="@drawable/contact"
        android:layout_margin="20dp"
        android:text="Kontaktlar"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:drawablePadding="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calls"
        app:layout_constraintTop_toBottomOf="@id/contacts"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableEnd="@drawable/arrownext"
        android:drawableStart="@drawable/phonecall"
        android:layout_margin="20dp"
        android:text="Qo'ng'iroqlar"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:drawablePadding="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chennels"
        app:layout_constraintTop_toBottomOf="@id/calls"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableEnd="@drawable/arrownext"
        android:drawableStart="@drawable/saved"
        android:layout_margin="20dp"
        android:text="Kanal ochish"
        android:gravity="center_vertical"

        android:textColor="@color/black"
        android:textSize="18sp"
        android:drawablePadding="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings"
        app:layout_constraintTop_toBottomOf="@id/chennels"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableEnd="@drawable/arrownext"
        android:drawableStart="@drawable/settings"
        android:layout_margin="20dp"
        android:text="Sozlamalar"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:drawablePadding="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"/>




</androidx.constraintlayout.widget.ConstraintLayout>